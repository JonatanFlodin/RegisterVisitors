@page

@model RegisterVisitors.ListModel
@{
    ViewData["Title"] = "List";
}
    <meta http-equiv="refresh" content="60" />

<div class="container">
    <div class="listViewHeader row">
        <p>Besökare på kontoret</p>
        
    </div>
    <div class="row" id="visitorsCarousel">

        <div class="carousel slide row col-xs col-sm col-md col-lg col-xl" data-ride="carousel" data-interval="5000">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active row">
                    <p>Våra besökare här idag:</p>
                </div>
                @foreach (var visitor in Model.Visitors)
                {
                    <div class="item carouselText row">
                        <div class="col-xs col-sm col-md col-lg col-xl">
                            <p>Besökare: @visitor.Name</p>
                            <p>Företag/Organisation: @visitor.Company</p>
                            <p>Besöker: @visitor.Visiting</p>
                        </div>
                        
                    </div>
                }
            </div>
        </div>
    </div>
</div> 

